<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92675FAF"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/SurveyTitle"
        android:layout_width="358dp"
        android:layout_height="65dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Checking In"
        android:textColor="@color/white"
        android:textSize="55sp"
        android:textStyle="bold" />

    <TextView

        android:id="@+id/SurveyQuestion"
        android:layout_width="292dp"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"


        android:text="@string/SurverySubheading"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <CheckBox
        android:id="@+id/IntenseCrampCheck"
        android:layout_width="@dimen/checkWidth"
        android:layout_height="@dimen/checkHeight"
        android:layout_row="2"
        android:layout_column="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:checked="false"
        android:text="Severe/Intense Cramps" />

    <CheckBox
        android:id="@+id/HeadacheCheck"
        android:layout_width="@dimen/checkWidth"
        android:layout_height="@dimen/checkHeight"
        android:layout_row="3"
        android:layout_column="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Headaches" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="@dimen/checkWidth"
        android:layout_height="@dimen/checkHeight"
        android:layout_row="4"
        android:layout_column="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Nausea" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="@dimen/checkWidth"
        android:layout_height="@dimen/checkHeight"
        android:layout_row="5"
        android:layout_column="0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:text="Extremely Heavy Flow" />

</GridLayout>